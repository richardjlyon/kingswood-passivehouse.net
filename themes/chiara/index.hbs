{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
<header class="site-head">
    <div class="vertical">
        <div class="site-head-content inner">
            <div class="left">
                {{#if @blog.logo}}<div class="blog-logo" style="background-image: url({{@blog.logo}})">Blog Logo</div>{{/if}}
                {{#if @blog.cover}}<div class="blog-cover" style="background-image: url({{@blog.cover}})">Blog Cover Image</div>{{/if}}
            </div>
            <div class="right">
                <h1 class="blog-title">{{@blog.title}}</h1>
                <div class="blog-social">
                    <a href="http://www.twitter.com/starburst1977"><i class="fa fa-twitter"></i></a>
                    <a href="http://dribbble.com/Starburst1977"><i class="fa fa-dribbble"></i></a>
                    <a href="https://github.com/starburst1977"><i class="fa fa-github"></i></a>
                    <a href="http://www.linkedin.com/in/svenread"><i class="fa fa-linkedin"></i></a>
                </div>
                <h2 class="blog-description">{{@blog.description}}</h2>
                <div class="head-links">
                    <a href="/about">About me</a> 路 <a href="/marisa/">Marisa</a> 路 <a href="/chiara/">Chiara</a> 路 <a href="/readium-ghost-theme/">Readium</a>
                </div>
            </div>
        </div>
        
    </div>
</header>

{{! The main content area on the homepage }}
<main class="content index" role="main">
    {{! Each post will be output using this markup }}
    
    <h5 class="index-headline featured"><span>&#9733;</span></h5>
    
    {{#foreach posts}}
        {{#if featured}}
            <article class="{{post_class}}" itemscope itemtype="http://schema.org/BlogPosting" role="article">
                <div class="article-item">
                    <header class="post-header">
                        <h2 class="post-title" itemprop="name"><a href="{{url}}" itemprop="url">{{{title}}}</a></h2>
                        <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="on "}}</span>
                    </header>
                    <section class="post-excerpt" itemprop="description">
                        <p>{{excerpt characters="250"}}&hellip;</p>
                    </section>
                </div>
            </article>
        {{/if}}
    {{/foreach}}
    
    <h5 class="index-headline normal"><span>Blog articles&nbsp;&nbsp;路&nbsp;&nbsp;{{pagination}}</span></h5>
    
    <div class="cf frame">
    {{#foreach posts}}
        {{#if featured}}
        {{else}}
            <article class="{{post_class}}" itemscope itemtype="http://schema.org/BlogPosting" role="article">
                <div class="article-item">
                    <header class="post-header">
                        <h2 class="post-title" itemprop="name"><a href="{{url}}" itemprop="url">{{{title}}}</a></h2>
                        <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="on "}}</span>
                    </header>
                    <section class="post-excerpt" itemprop="description">
                        <p>{{excerpt characters="250"}}&hellip;</p>
                    </section>
                </div>
            </article>
        {{/if}}
    {{/foreach}}
    </div>
    
    <h5 class="index-headline bottom"><span>{{pagination}}</span></h5>
    
    {{!! After all the posts, we have the previous/next pagination links }}
    
</main>
