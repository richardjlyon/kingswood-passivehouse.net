{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! The big featured header on the homepage, with the site logo and description }}
<header class="site-head">
    <div class="vertical">
        <div class="site-head-content inner">
            <div class="left">
                {{#if @blog.logo}}<a href="/"><div class="blog-logo" style="background-image: url({{@blog.logo}})">Blog Logo</div></a>{{/if}}
                {{#if @blog.cover}}<a href="/"><div class="blog-cover" style="background-image: url({{@blog.cover}})">Blog Cover Image</div></a>{{/if}}
            </div>
            <div class="right">
                <h1 class="blog-title">{{@blog.title}}</h1>
                <div class="blog-social">
                    <a href="http://www.twitter.com/starburst1977"><i class="fa fa-twitter"></i></a>
                    <a href="http://dribbble.com/Starburst1977"><i class="fa fa-dribbble"></i></a>
                    <a href="https://github.com/starburst1977"><i class="fa fa-github"></i></a>
                    <a href="http://www.linkedin.com/in/svenread"><i class="fa fa-linkedin"></i></a>
                </div>
                <h2 class="blog-description">{{@blog.description}}</h2>
                <div class="head-links">
                    <a href="/aboutme">About me</a> · <a href="/marisa-ghost-theme/">Marisa</a> · <a href="/golden-ratio-modular-scaling-on-a-responsive-website/">Chiara</a> · <a href="/readium-ghost-theme/">Readium</a>
                </div>
            </div>
        </div>

    </div>
</header>

{{! The main content area on the homepage }}
<main class="content tag-list" role="main">
        
    <h5 class="index-headline normal"><span><a href="/">Back to Overview</a>&nbsp;&nbsp;·&nbsp;&nbsp;Article list for {{tag.name}}</span></h5>
    <br>
    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
            <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="on "}}</span>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    
    <h5 class="index-headline bottom"><span><a href="/">Back to Overview</a>&nbsp;&nbsp;·&nbsp;&nbsp;Article list for {{tag.name}}</span></h5>

</main>